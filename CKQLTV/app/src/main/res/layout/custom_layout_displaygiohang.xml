<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/lightwhite"
    android:padding="10dp"

    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/txt_customgiohang_TenGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/img_customgiohang_GioHang"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_below="@+id/txt_customgiohang_TenGioHang"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_auto_stories_black_24dp" />
    <ImageView
        android:id="@+id/img_customtable_DatSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_below="@id/img_customgiohang_GioHang"
        android:layout_marginLeft="6dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/img_customtable_ThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_payments_24"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_below="@id/img_customgiohang_GioHang"
        android:layout_toRightOf="@id/img_customtable_DatSach"
        android:layout_marginLeft="12dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/img_customtable_AnNut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_backspace_24"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_below="@id/img_customgiohang_GioHang"
        android:layout_toRightOf="@id/img_customtable_ThanhToan"
        android:layout_marginLeft="12dp"
        android:visibility="invisible"

        />

</RelativeLayout>